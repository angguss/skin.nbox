						<control type="image">
							<width>580</width>
							<height>44</height>
							<texture border="5">other_textures/ButtonFO.png</texture>
						</control>

						<control type="label">
							<posx>20</posx>
							<width>270</width>
							<info>ListItem.Label</info>
						</control>

						<control type="label">
							<posx>560</posx>
							<width>270</width>
							<align>right</align>
							<info>ListItem.Label2</info>
						</control>

					</focusedlayout>

				</control>

			</control>

		</control>

